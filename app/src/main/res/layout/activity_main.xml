<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="uk.ac.napier.calculator.MainActivity">

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:layout_marginTop="105dp"
        android:background="@color/colorPrimary"
        android:text="CE"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPoint"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="."
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <Button
        android:id="@+id/buttonEquals"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="="
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/buttonPoint"
        app:layout_constraintTop_toBottomOf="@+id/button9" />

    <Button
        android:id="@+id/button1"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="1"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonClear" />

    <Button
        android:id="@+id/button2"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="2"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/buttonFullClear" />

    <Button
        android:id="@+id/button3"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="3"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/buttonPercent" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="+"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/buttonPosNeg" />

    <Button
        android:id="@+id/button4"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="4"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="5"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button6"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="6"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/buttonTimes"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="X"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/buttonEquals"
        app:layout_constraintTop_toBottomOf="@+id/buttonDivide" />

    <Button
        android:id="@+id/button7"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="7"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <Button
        android:id="@+id/button8"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="8"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button9"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="9"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="-"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdd" />

    <Button
        android:id="@+id/button0"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="0"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:text="÷"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/buttonSubtract" />

    <Button
        android:id="@+id/buttonFullClear"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:layout_marginTop="105dp"
        android:background="@color/colorPrimary"
        android:text="C"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/buttonClear"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPercent"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:layout_marginTop="105dp"
        android:background="@color/colorPrimary"
        android:text="%"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/buttonFullClear"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPosNeg"
        android:layout_width="96dp"
        android:layout_height="80dp"
        android:layout_marginTop="105dp"
        android:background="@color/colorPrimary"
        android:text="±"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/buttonPercent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAnswer"
        android:layout_width="384dp"
        android:layout_height="52dp"
        android:background="@android:color/background_light"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="20sp"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@+id/textViewWokring"
        tools:text="Answer" />

    <TextView
        android:id="@+id/textViewWokring"
        android:layout_width="384dp"
        android:layout_height="52dp"
        android:background="@android:color/background_light"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Working" />



</android.support.constraint.ConstraintLayout>
